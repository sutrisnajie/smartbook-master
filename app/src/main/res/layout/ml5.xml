<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textml51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muatan Listrik"
        android:textSize="18sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <TextView
        android:id="@+id/textml52"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="2.	INDUKSI "
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textml51" />

    <TextView
        android:id="@+id/textml53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Simak simulasi dibawah ini!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textml52" />
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/ml5gif1"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textml53" />
    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ml5gif1"
        app:layout_constraintLeft_toLeftOf="@+id/ml5gif1"
        app:layout_constraintRight_toRightOf="@+id/ml5gif1"
        app:layout_constraintTop_toTopOf="@+id/ml5gif1"
        app:srcCompat="@drawable/play" />

    <TextView
        android:id="@+id/textml54"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Logam yang bermuatan negatif hanya didekatkan, tidak disentuhkan, pada batang logam yang netral, maka elektron-elektron batang logam tidak meninggalkan batang, namun elektron-elektron tersebut bergerak dalam logam menuju batang yang bermuatan, dan meninggalkan muatan positif pada ujung yang berlawanan."
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ml5gif1" />
</android.support.constraint.ConstraintLayout>